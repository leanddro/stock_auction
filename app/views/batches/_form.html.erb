<% if @batch.errors.present? %>
  <%= render "shared/errors", errors: @batch.errors %>
<% end %>
<%= form_with model: @batch, class: 'grid grid-cols-4 gap-2', data: {turbo: false} do |f| %>
  <div class="col-span-4">
    <%= f.label :code, class: 'label' %>
    <%= f.text_field :code, class: 'input input-bordered w-full max-w-ws' %>
  </div>
  <div class="col-span-2">
    <%= f.label :start_at, class: 'label' %>
    <%= f.datetime_local_field :start_at, class: 'textarea textarea-bordered w-full max-w-ws' %>
  </div>
  <div class="col-span-2">
    <%= f.label :end_at, class: 'label' %>
    <%= f.datetime_local_field :end_at, class: 'input input-bordered w-full max-w-ws' %>
  </div>
  <div class="col-span-2">
    <%= f.label :minimum_bid, class: 'label' %>
    <%= f.number_field :minimum_bid, class: 'input input-bordered w-full max-w-ws' %>
  </div>
  <div class="col-span-2">
    <%= f.label :minimum_bid_difference, class: 'label' %>
    <%= f.number_field :minimum_bid_difference, class: 'input input-bordered w-full max-w-ws' %>
  </div>
  <div>
    <%= f.submit t('.register'), class: 'btn btn-accent' %>
  </div>
<% end %>
