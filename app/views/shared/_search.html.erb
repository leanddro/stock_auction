<div class="m-4">
  <%= form_with url: search_path, method: :get,  data: { turbo: false } do |f| %>
    <%= f.label :query, 'Buscar', class: 'label' %>
    <%= f.text_field :query, class: 'input input-bordered h-16 w-1/3' %>
    <%= f.submit 'Buscar', class: 'btn btn-square h-14 w-14' %>
  <% end %>
</div>
