<section class="flex flex-col items-center">
  <div>
    <h2 class="text-3xl"><%= t ".log_in" %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full max-w-ws" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full max-w-ws" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions my-2">
        <%= f.submit t(".log_in"), class: "btn btn-accent" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
