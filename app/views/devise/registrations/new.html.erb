<section class="flex flex-col items-center">
  <div>
    <h2 class="text-3xl"><%= t ".sign_up" %></h2>
    <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { data: { controller: "masks" } } do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :name, class: "label"%>
        <%= f.text_field :name, autofocus: true, class: "input input-bordered w-full max-w-ws" %>
      </div>
      <div class="field">
        <%= f.label :cpf, class: "label"%>
        <%= f.text_field :cpf, class: "input input-bordered w-full max-w-ws", data: { masks_target: 'cpf' } %>
      </div>
      <div class="field">
        <%= f.label :email, class: "label"%>
        <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full max-w-ws" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t(".characters_minimum") %>)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full max-w-ws" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full max-w-ws" %>
      </div>

      <div class="actions">
        <%= f.submit t".sign_up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
