<section class="w-full px-6">
  <% if @category.errors.present? %>
    <%= render "shared/errors", errors: @category.errors %>
  <% end %>
  <%= form_with model: @category, class: 'form-control', data: {turbo: false} do |f| %>
    <div>
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name, class: 'input input-bordered w-full max-w-ws' %>
    </div>
    <div>
      <%= f.label :description, class: 'label' %>
      <%= f.text_area :description, class: 'textarea textarea-bordered w-full max-w-ws' %>
    </div>
    <div>
      <%= f.submit t('.register'), class: 'btn btn-accent' %>
    </div>
  <% end %>
</section>
