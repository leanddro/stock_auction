<section class="w-full px-4">
  <%= render "shared/search" %>
  <h2 class="text-3xl my-6"> <%= t(".results") %></h2>
  <div id="approved" class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 gap-4">
    <% @batches.each do |p| %>
      <%= link_to batch_detail_path(p.id) do %>
        <%= render p %>
      <% end %>
    <% end %>
  </div>
</section>

